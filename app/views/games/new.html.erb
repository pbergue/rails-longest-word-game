<div class="center">
  <h1>Letter challenge</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter.upcase %></li>
    <% end %>
  </ul>
  <form action="/score" method="POST">
    <label for="word">What's the longest word you can find ?</label>
    <br><br>
    <input type="text" placeholder="Your word..." name="word" class="form" autofocus>
    <input type="submit" class="form">
    <input id="grid" name="grid" type="hidden" value="<%= @downcased_letters %>" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  <br>
  <%= link_to "Shuffle again", "/new" %>
</div>
